<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/linearLayout3">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/pli_name"
            tools:text="Procedure Name" android:textSize="12sp" android:paddingTop="4sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pli_id" android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>