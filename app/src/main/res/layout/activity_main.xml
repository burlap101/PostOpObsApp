<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
            >

                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:id="@+id/main_top_row">
                    <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp" app:srcCompat="@drawable/ic_head"
                            android:id="@+id/imageView2"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:gravity="center|top">
                        <TextView
                                android:text="TOP SECTION"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView4"/>
                        <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/main_topobs_rv"
                                android:background="@color/colorAccent"/>
                    </LinearLayout>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:id="@+id/main_mid_row">
                    <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp" app:srcCompat="@drawable/ic_arms_and_mid"
                            android:id="@+id/imageView3"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="MID SECTION"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView"/>
                        <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:scrollbars="vertical"
                                android:background="@color/colorPrimary" android:id="@+id/main_midobs_rv"/>
                    </LinearLayout>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp" app:srcCompat="@drawable/ic_legs"
                            android:id="@+id/imageView4"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="LOW SECTION"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView3"/>
                        <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/main_bottomobs_rv"
                                android:background="@color/colorAccent"/>
                    </LinearLayout>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>