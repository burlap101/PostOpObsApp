<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddObservation" android:orientation="vertical">

    <TextView
            android:text="Add Observation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:textSize="24sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ao_procedure_tv" android:hint="@string/addedit_surgery_hint" android:textSize="18sp"
            android:paddingTop="8dp" android:paddingBottom="8dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ao_obsevation_et" android:hint="Observation"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ao_url_et" android:hint="URL"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/ao_specialnotes_et" android:minLines="3"
            android:hint="Include any special notes here to let your peers know what to keep in mind :)"/>
    <Button
            android:text="@string/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ao_submit_btn" android:onClick="onSubmitClicked"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ao_procedure_id" android:visibility="gone"/>
</LinearLayout>